@model VeloxWallet.Models.WalletTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Wallets" asp-action="Index">
    <p>
        <select asp-for="WalletType" asp-items="Model.Type">
            <option value="">All</option>
        </select>
        MaterialType: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].MaterialType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].Edition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallets[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Wallets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaterialType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
